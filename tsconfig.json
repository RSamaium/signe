{
  "compilerOptions": {
    "target": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "paths": {
      "@signe/sync": ["./packages/sync/src/index.ts"],
      "@signe/reactive": ["./packages/reactive/src/index.ts"]
    },
    "module": "ESNext",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "exclude": ["**/dist/**", "node_modules"]
}
